@{
    ViewBag.Title = "IndexFunction";

}

<div>
    <table id="tabFun"></table>
    <div id="moduleChildToolbar">
        <a href="###" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="moduleChild.showEdit()">新增子功能</a>
        &nbsp;&nbsp;&nbsp;
        <a href="###" class="easyui-linkbutton" iconcls="icon-redo" plain="true" onclick="moduleChild.changehref()">返回模块编辑</a>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#tabFun").datagrid({
            url: '@Url.Action("GetModuleFunctionList", new { moduleid = ViewData["moduleid"] })',
            title: '子模块功能信息',
            singleSelect: true,
            loadMsg: '数据载入中...',
            pagination: true, // 是否显示分页控件
            pagesize: 10,      // 每页行数
            pageList: [10],    // 要选的每页行数 为了界面显示正确一定要和pagesize的值相同
            height: '700px',
            toolbar: '#moduleChildToolbar',
            rownumbers: true,
            columns: [[
                {
                    field: '_operate', title: '操作', width: 150, align: 'center'
                    , formatter: function (value, row, index) {
                        var onclickEvent = 'moduleChild.showEdit(' + row.ID + ');';
                        var html = '<a href="javascript:void(0)"  class="loan_remove_button"'
                                 + 'onclick="moduleChild.removeModuleFunction(\'' + row.ID + '\',\'' + row.FunctionName + '\')" >删除</a>'
                                 + '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;'
                                 + '<a href="javascript:void(0)"  class="loan_edit_button" '
                                 + ' onclick="' + onclickEvent + '" >修改</a>';
                        //console.log(html);
                        return html;
                    }
                },
                //{ field: 'ID', title: 'ID', width: 100, align: 'center' },
                { field: 'FunctionID', title: '功能编号', width: 100, align: 'center' },
                { field: 'FunctionName', title: '功能名称', width: 100, align: 'center' },
                { field: 'ControlID', title: '控件编号', width: 250, align: 'center' },
                { field: 'Controller_Name', title: 'Controller', width: 100, align: 'center' },
                { field: 'Action_Name', title: 'Action', width: 100, align: 'center' },
            ]],
            onLoadSuccess: function (data) {
                $(".loan_remove_button").linkbutton({ iconCls: 'icon-remove' });
                $(".loan_edit_button").linkbutton({ iconCls: 'icon-edit' });
            }
        });
    });

    var moduleChild = {

        changehref: function () {
            //console.log(url);
            var url = '@Url.Action("Index")';

            var tab = $('#mainTabs').tabs('getSelected');
            $('#mainTabs').tabs('update', {
                tab: tab,
                options: {
                    href: url  // 新内容的URL
                }
            });

            // 调用 'refresh' 方法更新选项卡面板的内容
            var tab = $('#mainTabs').tabs('getSelected');  // 获取选择的面板
            tab.panel('refresh', url);
        },

        showEdit: function (id) {
            var width = 500;
            var height = 450;

            var title = '新增功能';
            var editActionUrl = '@Url.Action("CreateFunction", new { moduleid = ViewData["moduleid"] })';

            if (id != null) {
                editActionUrl = '@Url.Action("EditFunction")' + '?id=' + id;
                title = '编辑功能';
            }

            showWindow(title, editActionUrl, width, height, moduleChild.reloadDataGrid);
        },

        reloadDataGrid:function(){
            $("#tabFun").datagrid('reload');
        },

        removeModuleFunction: function (id, name) {
            $.messager.confirm('Confirm', '确定删除功能\'' + name + '\'?'
                , function (r) {
                    if (r) {
                        $.post('@Url.Action("RemoveFunction")', { id: id }, function (result) {
                            if (result.success) {
                                $('#tabFun').datagrid('reload');    // 重新加载用户数据
                            } else {
                                $.messager.alert({    // 显示错误信息
                                    title: 'Error',
                                    msg: result.msg
                                });
                            }
                        }, 'json');
                    }
                });
        }
    };
</script>