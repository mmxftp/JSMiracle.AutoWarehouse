@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/EasyUI/themes/base")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @*<script type="text/javascript" src="~/jquery-easyui-1.4.3/jquery.easyui.min.js"></script>*@
    <script type="text/javascript" src="~/Scripts/CustomScripts/jquery.easyui.extend.js"></script>
    @Scripts.Render("~/bundles/moment")
    <script type="text/javascript" src="~/Scripts/CustomScripts/common.js"></script>
    <link rel="icon" href="~/Content/images/favicon_32.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/Content/images/favicon_32.ico" type="image/x-icon" />
    <script type="text/javascript">
        function onMenuClick(id,name,url) {
            if (id == -1)
                return;

            var tabId = "tab" + id;
            var maintabs = $("#mainTabs");
            var tab = maintabs.tabs("getTabById", tabId);
            if (!tab) {
                maintabs.tabs('add', {
                    id: tabId,
                    title: name,
                    href: url,
                    selected :true
                });
            }

            maintabs.tabs('select', name);
        }
    </script>
</head>

<body class="easyui-layout">
    <div data-options="region:'north'" style="height:70px">
        @Html.Partial("_TitlePartial")
    </div>
    <div data-options="region:'west',split:true" title="菜单" style="width:300px;height:100%;">
        @{Html.RenderAction("_MenuPartial", "Home");}
    </div>
    <div data-options="region:'center',title:'主窗体'" style="overflow: hidden;">
        @*<iframe id="ibody" name="ibody" src="" frameborder="0" scrolling="yes" style=" height:100%;width:100%;overflow:visible"></iframe>*@
        <div id="mainTabs" class="easyui-tabs" style="width:100%;height:800px;">
        </div>
    </div>
</body>

</html>