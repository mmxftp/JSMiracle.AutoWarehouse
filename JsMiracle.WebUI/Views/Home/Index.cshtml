@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/EasyUI/themes/base")
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/jquery-easyui-1.4.3/jquery.easyui.min.js"></script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height:100px"></div>
    <div data-options="region:'west',split:true" title="菜单" style="width:300px;height:100%;">
        @{Html.RenderAction("Menu", "Nav");}
    </div>
    <div data-options="region:'center',title:'主窗体'" style="overflow: hidden;">
        <iframe id="ibody" name="ibody" src="" frameborder="0" scrolling="yes" style=" height:100%;width:100%;overflow:visible"></iframe>
    </div>
</body>
</html>